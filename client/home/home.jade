.home-container.row(ng-controller="HomeController as home")
  .col.s4.m3.l2.left-panel
    h2.center-align.give-text "A
      br
      | book
      br
      | is
      br
      | a
      br
      | dream
      br
      | that
      br
      | you
      br
      | hold
      br
      | in
      br
      | your
      br
      | hand"
      br
      span.orange-text - Neil Gaiman
  .homepage-banner.col.s8.m9.l10
    .banner-overlay
      .row.authentication-box
        .col.s12.m10.l4.offset-l4.offset-m1
          .row
            h3.white-text.center-align Welcome
          .row
            .col.s12
              ul.tabs
                li.tab.col.s3
                  a.active(href='#login') Login
                li.tab.col.s3
                  a(href='#signup') Signup
            #login.col.s12
              .row.z-depth-4.white.signup-box
                .row.center-align
                  .col.s6
                    a(href="/auth/facebook", target="_self")
                      i.fb-login.medium.mdi.mdi-facebook-box
                  //- .col.s4
                  //-   a(href="#") Twitter
                  .col.s6
                    a(href="/auth/google", target="_self")
                      i.red-text.medium.mdi.mdi-google-plus
                form.col.s12(name="loginForm" novalidate)
                  .row
                    .input-field.col.s12
                      i.material-icons.prefix account_circle
                      input(type="email", id="email", ng-model="home.userLogin.email", required)
                      label(for="email") Email
                  .row
                    .input-field.col.s12
                      i.material-icons.prefix lock_outline
                      input(type="password", id="password", value="laide", ng-model="home.userLogin.password", required)
                      label(for="password") Password
                  .row
                    button.right.btn.waves-effect.waves-light(type="submit", ng-click="home.login()", ng-disabled="loginForm.$invalid") Login
                      i.material-icons.right send
            #signup.col.s12
              .row.z-depth-4.white.signup-box
                .row.center-align
                  .col.s6
                    a(href="/auth/facebook", target="_self")
                      i.fb-login.medium.mdi.mdi-facebook-box
                  //- .col.s4
                  //-   a(href="#") Twitter
                  .col.s6
                    a(href="/auth/google", target="_self")
                      i.red-text.medium.mdi.mdi-google-plus
                form.col.s12(name="newUser" novalidate)
                  .row
                    .input-field.col.s12
                      i.material-icons.prefix account_circle
                      input(type="email", id="email", ng-model="home.userSignup.email", required)
                      label(for="email") Email
                  .row
                    .input-field.col.s12
                      i.material-icons.prefix lock_outline
                      input(type="password", id="password", ng-model="home.userSignup.password", required)
                      label(for="password") Password
                  .row
                    button.right.btn.waves-effect.waves-light(type="submit", ng-click="home.signup()", ng-disabled="newUser.$invalid") Sign up
                      i.material-icons.right send
