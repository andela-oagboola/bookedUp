html
  head
    title My fine page
    base(href='/')
    include main

  body(ng-app="bookedUpApp")
    nav(ng-controller="IndexController as index")
      .nav-wrapper.orange.accent-3
        a.nav-wrapper(href="#") BooK
        ul#nav-mobile.right.hide-on-med-and-down(ng-if="index.user.email")
          li
            a(href="/books/donor/{{index.user._id}}") Books by me
          li
            a(href="#") Signed in as {{index.user.email}}
          li
            a(href="#", ng-click="index.logout()") Logout
    div(ng-view)
